<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Wuzlstats@(ViewBag.CurrentLeague != null ? " - " + @ViewBag.CurrentLeague : "")</title>

    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="~/css/fontawesome.css" rel="stylesheet" />
    <link href="~/css/brands.css" rel="stylesheet" />
    <link href="~/css/solid.css" rel="stylesheet" />

    <link rel="apple-touch-icon" sizes="57x57" href="~/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>
<body class="bg-gray-50">
<div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <nav class="bg-white border border-gray-200 rounded-lg shadow-sm my-5">
        <div class="flex flex-wrap items-center justify-between p-4">
            <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-3">
                <span class="text-2xl font-semibold text-gray-900">Wuzlstats</span>
                @if (ViewBag.CurrentLeague != null)
                {
                    <span class="hidden sm:inline text-gray-600">
                        &#8669; @ViewBag.CurrentLeague league
                    </span>
                }
            </a>

            @if (ViewBag.CurrentLeague != null)
            {
                <a asp-controller="Leagues" asp-action="Index" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">
                    Switch league
                </a>
            }
        </div>
    </nav>

    @RenderBody()

    <footer class="mt-24 mb-8 border-t border-gray-200 pt-8">
        <div class="flex flex-wrap gap-4 text-sm text-gray-600">
            <span>
                Wuzlstats by <a href="https://twitter.com/saxx" class="text-blue-600 hover:underline">Hannes 'saxx' Sachsenhofer</a> and others
            </span>
            <a href="https://github.com/saxx/wuzlstats/issues" class="text-blue-600 hover:underline">
                Report bug / request feature
            </a>
            <a href="https://github.com/saxx/wuzlstats" class="text-blue-600 hover:underline">
                Fork on GitHub
            </a>
        </div>
    </footer>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.4/hammer.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/signalr/jquery.signalr-2.2.0.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/app.bundle.js"> </script>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.2.0/dist/flowbite.min.js"></script>

@RenderSection("scripts", required: false)
@* ReSharper restore StatementIsNotTerminated *@
@* ReSharper restore UnusedParameter *@
</body>
</html>
