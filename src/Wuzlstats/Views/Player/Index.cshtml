@model Wuzlstats.ViewModels.Player.IndexViewModel

<div class="flex flex-wrap -mx-4">
    <div class="w-full md:w-2/3 px-4">
        <div class="flex flex-wrap -mx-4 mb-6">
            <div class="w-full sm:w-1/2 px-4 mb-6 sm:mb-0">
                <h4 class="text-lg font-semibold mb-4">@Model.Name in the last @Model.RecentDays days</h4>
                <partial name="_PlayerStatistic", model="Model.RecentStatistics" />
            </div>
            <div class="w-full sm:w-1/2 px-4">
                <h4 class="text-lg font-semibold mb-4">@Model.Name since forever</h4>
                <partial name="_PlayerStatistic", model="Model.Statistics" />
            </div>
        </div>

        <hr class="my-6 border-gray-200" />
        <a href="@Url.Action("Avatar",new { id = Model.Id})" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 transition-colors inline-block">
            Change the avatar image of @Model.Name
        </a>
    </div>
    <div class="hidden md:block w-full md:w-1/3 px-4">
        <img src="data:image/png;base64,@Model.Image" class="avatar-player-lg" alt="Avatar for @Model.Name" />
    </div>
</div>
