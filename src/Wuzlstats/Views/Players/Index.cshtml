@model Wuzlstats.ViewModels.Players.IndexViewModel

@if (Model.Recent)
{
    <p class="text-sm text-gray-600 mb-4">
        These are the players of the last @Model.Days days. All of them.<br />This is pretty sweet, but it gets better: There's also
        <a href="@Url.Action("Index", "Players", new { sort = Model.ActiveFilter, recent = false })" class="text-blue-600 hover:underline">this very same statistic, but for all of the time</a>. All of it. Holy crap!
    </p>
}
else
{
    <p class="text-sm text-gray-600 mb-4">
        These are all the players. Ever.<br />No one will be forgotten. Shame and fame will last till the very end of days, or at least until a database crash with no backups. <br />
        There's the same statistic, <a href="@Url.Action("Index", "Players", new { sort = Model.ActiveFilter, recent = true })" class="text-blue-600 hover:underline">but only for the last @Model.Days days</a>, too.
    </p>
}

<div class="flex items-center gap-3 mb-4">
    <span class="text-sm font-medium text-gray-700">Order By</span>
    <div class="inline-flex rounded-md shadow-sm" role="group">
        <a href="@Url.Action("Index", "Players", new { recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(string.IsNullOrEmpty(Model.ActiveFilter) ? "text-white bg-blue-700" : "text-gray-900 bg-white hover:bg-gray-100") border border-gray-200 rounded-l-lg focus:z-10 focus:ring-2 focus:ring-blue-700 transition-colors">Last played</a>
        <a href="@Url.Action("Index", "Players", new { sort = "best", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "best" ? "text-white bg-blue-700" : "text-gray-900 bg-white hover:bg-gray-100") border-t border-b border-gray-200 focus:z-10 focus:ring-2 focus:ring-blue-700 transition-colors">Best</a>
        <a href="@Url.Action("Index", "Players", new { sort = "worst", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "worst" ? "text-white bg-blue-700" : "text-gray-900 bg-white hover:bg-gray-100") border-t border-b border-gray-200 focus:z-10 focus:ring-2 focus:ring-blue-700 transition-colors">Worst</a>
        <a href="@Url.Action("Index", "Players", new { sort = "activity", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "activity" ? "text-white bg-blue-700" : "text-gray-900 bg-white hover:bg-gray-100") border border-gray-200 rounded-r-lg focus:z-10 focus:ring-2 focus:ring-blue-700 transition-colors">Most active</a>
    </div>
</div>

<div class="relative overflow-x-auto bg-white shadow-sm rounded-lg">
    <table class="w-full text-sm text-left">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 border-b border-gray-200">
            <tr>
                <th class="px-4 py-3"></th>
                <th class="px-4 py-3">Player</th>
                <th class="px-4 py-3">Score</th>
                <th class="px-4 py-3">Last game</th>
                <th class="px-4 py-3"># 1 vs. 1</th>
                <th class="px-4 py-3"># 2 vs. 2</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            @{var rank = 1; }
            @foreach (var player in Model.Players)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-gray-700">
                        @(rank++)
                    </td>
                    <td class="px-4 py-3">
                        <div class="flex items-center gap-3">
                            <a href="@Url.Action("Index", "Player", new { id = player.PlayerId })">
                                <img src="data:image/png;base64,@player.Image" alt="@player.Name" class="avatar-player" />
                            </a>
                            <span class="font-medium text-gray-900">@player.Name</span>
                        </div>
                    </td>
                    <td class="px-4 py-3 text-gray-700">
                        <div class="flex items-center gap-2">
                            <span class="inline-flex items-center gap-1">
                                @player.Wins
                                <i class="fas fa-thumbs-up text-green-600"></i>
                            </span>
                            <span class="inline-flex items-center gap-1">
                                @player.Losses
                                <i class="fas fa-thumbs-down text-red-600"></i>
                            </span>
                        </div>
                    </td>
                    <td class="px-4 py-3 text-gray-700">
                        @player.LastGamePlayedOn.ToString("d")
                    </td>
                    <td class="px-4 py-3 text-gray-700">
                        @player.SingleGames
                    </td>
                    <td class="px-4 py-3 text-gray-700">
                        @player.TeamGames
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
